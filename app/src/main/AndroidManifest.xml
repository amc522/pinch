<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kingcoopa.pinch" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kingcoopa.pinch.DailyAllowanceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kingcoopa.pinch.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName="com.kingcoopa.pinch.DailyAllowanceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kingcoopa.pinch.DailyAllowanceActivity" />
        </activity>
        <activity
            android:name="com.kingcoopa.pinch.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.kingcoopa.pinch.DailyAllowanceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kingcoopa.pinch.DailyAllowanceActivity" />
        </activity>
        <activity
            android:name="com.kingcoopa.pinch.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:parentActivityName="com.kingcoopa.pinch.DailyAllowanceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kingcoopa.pinch.DailyAllowanceActivity" />
        </activity>
    </application>

</manifest>
